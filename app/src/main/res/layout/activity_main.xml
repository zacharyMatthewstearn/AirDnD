<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.epicodus.airdd.MainActivity"

    android:background="@color/colorPrimaryLight"

    >




    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/title"
        android:id="@+id/textView_title"
        android:textColor="@color/colorAccent"
        android:textSize="80sp"
        android:textStyle="bold"
        android:layout_marginTop="52dp"
        android:layout_alignParentTop="true"
        android:layout_alignLeft="@+id/button_findGame"
        android:layout_alignStart="@+id/button_findGame" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView_title"
        android:src="@drawable/dnd_logo"
        android:contentDescription="@string/dnd_logo"
        android:layout_alignBottom="@+id/textView_title"
        android:layout_alignTop="@+id/textView_title"
        android:layout_toRightOf="@+id/textView_title"
        android:layout_toEndOf="@+id/textView_title"
        android:layout_marginRight="60dp"
        android:layout_marginEnd="60dp"
        android:paddingBottom="3sp" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/find_a_game"
        android:id="@+id/button_findGame"
        android:background="@color/colorAccent"
        android:textColor="@color/colorIcons"
        android:layout_marginTop="54dp"
        android:layout_below="@+id/textView_title"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginLeft="60dp"
        android:layout_marginRight="60dp" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/host_a_game"
        android:id="@+id/button_hostGame"
        android:textColor="@color/colorIcons"
        android:background="@color/colorAccent"
        android:layout_marginTop="80dp"
        android:layout_below="@+id/button_findGame"
        android:layout_alignRight="@+id/button_findGame"
        android:layout_alignEnd="@+id/button_findGame"
        android:layout_alignLeft="@+id/button_findGame"
        android:layout_alignStart="@+id/button_findGame" />
</RelativeLayout>
