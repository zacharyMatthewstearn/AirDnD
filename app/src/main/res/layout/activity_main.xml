<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.epicodus.airdd.ui.MainActivity"

    >


    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/dragonBackgroundImageView"
        android:scaleType="fitCenter"
        android:backgroundTint="#80ffffff"
        android:backgroundTintMode="src_atop"
        android:padding="20dp"
        android:focusableInTouchMode="false"
        android:src="@drawable/dragon" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/title"
        android:id="@+id/textView_title"
        android:textColor="@color/colorPrimary"
        android:textSize="100sp"
        android:textStyle="bold"
        android:paddingBottom="19sp"
        android:paddingTop="25sp"
        android:layout_alignParentTop="true"
        android:layout_alignLeft="@+id/button_findGame"
        android:layout_alignStart="@+id/button_findGame"
        android:paddingLeft="60dp" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView_title"
        android:src="@drawable/dnd_logo"
        android:contentDescription="@string/dnd_logo"
        android:layout_alignBottom="@+id/textView_title"
        android:layout_alignTop="@+id/textView_title"
        android:layout_toRightOf="@+id/textView_title"
        android:layout_toEndOf="@+id/textView_title"
        android:layout_marginRight="60dp"
        android:layout_marginEnd="60dp" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/find_a_game"
        android:id="@+id/button_findGame"
        android:background="@color/colorPrimaryLight"
        android:textColor="@color/colorIcons"
        android:layout_above="@+id/button_hostGame"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/host_a_game"
        android:id="@+id/button_hostGame"
        android:textColor="@color/colorIcons"
        android:background="@color/colorPrimaryDark"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

</RelativeLayout>
